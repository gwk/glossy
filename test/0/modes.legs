# Patterns.

space: \s+
sym: $Ascii_Letter+
sq: '
dq: "
paren_open: \(
paren_close: \)

comment_open: /\*
comment_close: \*/
comment_contents: [$Ascii - */]+
comment_star: \*
comment_slash: /

backslash: \\
lit_contents: [$Ascii - '"\\]+
lit_escape: \\ [ $Ascii - ( ]
lit_interpolate: \\ \(

# Modes.

main: space sym comment_open sq dq paren_open paren_close
comment: comment_open comment_close comment_contents comment_star comment_slash comment_open
lit: sq dq backslash lit_contents lit_escape lit_interpolate

# Transitions.
main  paren_open      : main paren_close // must push child main ctx so that a lit ctx does not get prematurely popped.
lit   lit_interpolate : main paren_close

main    comment_open : comment comment_close
comment comment_open : comment comment_close

main sq : lit sq
main dq : lit dq
