space: \s+
sym: $Ascii_Letter+
comment_open: /\*
sq: '
dq: "
paren_open: \(
paren_close: \)

comment.close: \*/
comment.contents: [$Ascii - */]+
comment.star: \*
comment.slash: /
comment.open_nested: /\*

lit.sq: '
lit.dq: "
lit.backslash: \\
lit.contents: [$Ascii - '"\\]+
lit.escape: \\ [ $Ascii - ( ]
lit.interpolate_open: \\ \(

% paren_open paren_close # push child main ctx so that lit ctx does not get prematurely popped.
% lit.interpolate_open paren_close

% comment_open comment.close
% comment.open_nested comment.close

% sq lit.sq
% dq lit.dq
